#!/bin/bash
# Take a quick note.

set -eu

main() {
  if [[ $# -ne 1 ]] || [[ -z "$1" ]]; then
    echo "usage:"
    echo "  note <title>"
    echo "  note --list"
    exit 1
  fi

  if [[ "$1" = --list ]]; then
    ls "$HOME/files/notes/$(date2 +%Y)"
    exit
  fi

  d="$HOME/files/notes/$(date2 +%Y)"
  if [[ ! -e "$d" ]]; then
    mkdir "$d"
  fi

  # Remove .txt suffix if there is one.
  path="${1%.txt}"
  path="$d/$(date2 +%Y-%m-%d)-$path.txt"
  vim "$path"
}

main "$@"
